<body>
  
  <% if (typeof errors != "undefined") {%>
    <% errors.forEach(error=>{%>
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <%= error.message%>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
        <%})%><%}%>

    <div class="container">
      <!-- section-left-start -->

      <div class="container-left">
        <div class="wrapper-left">
          <div class="part-one">
            <h3>Get started</h3>
            <p>Lets create your account</p>
          </div>
          <div class="inp">
            <form action="/auth/signup" method="post">
              <label for="" class="email">User-Name </label>

              <input
              class="inp-left"
               type="text" name="username"
                type="text"
                placeholder="username">
              <label for="" class="email">E-mail </label>

              <input
                class="inp-left"
                type="email"
                name="email"
                placeholder="enter your mail"
              />
              <label for="" class="pass">Password </label>
 
              <input
                class="inp-left"
                type="password"
                placeholder="8+ characters, 2 numbers"
                name="password"
                id=""
              />
              <label for="" class="pass">Renter-Password </label>
 
              <input
              class="inp-left"
              type="password"
              placeholder="8+ characters, 2 numbers"
               type="text"
                name="password1" 
               placeholder="username">
            </form>
          </div>
          <br>
          <div class="buttons">
            <button class="btn-one" onclick="document.forms[0].submit()">Create an account</button>
            
          </div>
          
          <div class="down">
            <p>Already have an account?</p>
            <a href="/auth/login"> Log in </a>
          </div>
        </div>
      </div>
      <!-- sectiochen-left-end -->
    </div>


